@model ClothingStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="mb-3">Product Details</h1>

<div class="card shadow-sm">
    <div class="card-body">
    <dl class="row mb-0">
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                var imagePath = Model.ImageUrl.StartsWith("http://") || Model.ImageUrl.StartsWith("https://") || Model.ImageUrl.StartsWith("/")
                    ? Model.ImageUrl
                    : $"/images/{Model.ImageUrl}";
                <img src="@imagePath" alt="@Model.Name" style="max-height:120px;" class="img-thumbnail" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
    </dl>
    </div>
</div>
<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
