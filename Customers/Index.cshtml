@model IEnumerable<ClothingStore.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<h1 class="mb-4">Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg btn-hover mb-3">Add Customer</a>
</p>

@if (Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FullName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-primary btn-hover me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info btn-hover me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger btn-hover">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No customers found. Please add a customer.</div>
}
