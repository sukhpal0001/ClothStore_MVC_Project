@model ClothingStore.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1 class="mb-3">Order Details</h1>

<div class="card shadow-sm">
    <div class="card-body">
    <dl class="row mb-0">
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-9">
            @Model.TotalAmount.ToString("C")
        </dd>
    </dl>
    </div>
</div>
<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
