@model IEnumerable<ClothingStore.Models.Brand>
@{
    ViewData["Title"] = "Brands";
}

<h1 class="mb-4">Brands</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg btn-hover mb-3">Add New Brand</a>
</p>

@if (Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>Description</th>
                <th>Founded</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Name</td>
                    <td>@brand.Country</td>
                    <td>@brand.Description</td>
                    <td>@brand.FoundedYear</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-sm btn-primary btn-hover me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@brand.BrandId" class="btn btn-sm btn-info btn-hover me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@brand.BrandId" class="btn btn-sm btn-danger btn-hover">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No brands found. Please add a brand.</div>
}
