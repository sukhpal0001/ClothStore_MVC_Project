@model ClothingStore.Models.Brand
@{
    ViewData["Title"] = "Create Brand";
}

<h2>Create Brand</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="FoundedYear"></label>
        <input asp-for="FoundedYear" class="form-control" />
        <span asp-validation-for="FoundedYear" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Brand</button>
</form>
